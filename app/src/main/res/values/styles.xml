<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/blue</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="custom_toast_style">
        <item name="stTextBold">true</item>
        <item name="stTextColor">@color/white</item>
        <item name="stFont">@font/poppin_regular</item>
        <item name="stTextSize">12sp</item>
        <item name="stColorBackground">@color/blue</item>
        <item name="stSolidBackground">true</item>
        <item name="stIconEnd">@drawable/ic_star_solid_yellow</item>
        <item name="stLength">SHORT</item>
        <item name="stRadius">20dp</item>
    </style>

    <style name="sources">
        <item name="fontFamily">@font/poppin_bold</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="affected_sources">
        <item name="fontFamily">@font/poppin_bold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="ColorDisable" parent="android:Theme.Holo.Light">
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AvoidCorona">
        <item name="fontFamily">@font/poppin_bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="countryNumber">
        <item name="fontFamily">@font/poppin_regular</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="countrySubDetails">
        <item name="fontFamily">@font/poppin_regular</item>
        <item name="android:textSize">9sp</item>
    </style>

    <style name="continent">
        <item name="fontFamily">@font/poppin_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="countryDetails">
        <item name="fontFamily">@font/poppin_medium</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="lastUpdated">
        <item name="fontFamily">@font/poppin_regular</item>
        <item name="android:textSize">8sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
