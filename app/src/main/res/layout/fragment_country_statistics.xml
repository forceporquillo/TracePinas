<layout>

    <data>
        <variable
            name="statistics"
            type="com.force.codes.project.app.presentation_layer.views.fragments.StatisticsFragment"/>
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:elevation="0dp">

                <androidx.appcompat.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/foregroundColor2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/margin_10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/worldwide"
                            style="@style/fragment_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="@string/statistics" />

                        <com.ogaclejapan.smarttablayout.SmartTabLayout
                            android:id="@+id/tablayout"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginBottom="@dimen/margin_10dp"
                            android:clipToPadding="false"
                            android:foreground="?attr/selectableItemBackground"
                            android:paddingLeft="0dp"
                            android:paddingRight="0dp"
                            app:stl_customTabTextLayoutId="@layout/custom_tab"
                            app:stl_customTabTextViewId="@id/custom_text"
                            app:stl_defaultTabTextHorizontalPadding="15dp"
                            app:stl_distributeEvenly="true"
                            app:stl_dividerColor="@color/transparent"
                            app:stl_dividerThickness="0dp"
                            app:stl_indicatorColor="@color/blue"
                            app:stl_indicatorCornerRadius="18dp"
                            app:stl_indicatorGravity="center"
                            app:stl_indicatorInterpolation="smart"
                            app:stl_indicatorThickness="25dp"
                            app:stl_underlineColor="@color/transparent"
                            app:stl_underlineThickness="0dp" />
                    </LinearLayout>
                </androidx.appcompat.widget.Toolbar>
            </com.google.android.material.appbar.AppBarLayout>

            <View
                android:id="@+id/bottom_divider"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@android:color/darker_gray" />

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>