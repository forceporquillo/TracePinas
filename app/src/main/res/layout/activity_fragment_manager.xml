<layout>
    <data>
        <variable
            name="activity"
            type="com.force.codes.project.app.presentation_layer.views.activity.FragmentContainerActivity"
            />
    </data>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/foregroundColor2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SPLASH SCREEN"
        android:layout_centerInParent="true"
        android:textSize="25sp"
        android:fontFamily="@font/poppin_bold"/>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/included"/>

    <include
        android:id="@+id/included"
        layout="@layout/bottombar_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
</layout>