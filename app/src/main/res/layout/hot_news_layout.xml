<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/vertical_parent"
    android:padding="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/picture_parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/image_card_view"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="7dp"
            android:elevation="0dp"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardCornerRadius="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/image_placeholder"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_toEndOf="@id/image_card_view"
            android:id="@+id/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:ellipsize="end"
            android:text="A number of national figures attended BJ's attended habibie funeral"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="14sp" />

        <TextView
            android:layout_toEndOf="@id/image_card_view"
            android:id="@+id/item_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_title"
            android:layout_marginStart="7dp"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:textSize="12sp"
            android:text="Indonesia News, 9 hours ago." />
    </RelativeLayout>
</RelativeLayout>