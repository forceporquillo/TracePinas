<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:viewBindingIgnore="true"
    android:layout_marginTop="2dp"
    app:cardBackgroundColor="@color/foregroundColor2">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="4dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/worldwide_flag_skeleton"
            android:layout_width="@dimen/xhdpi_layout"
            android:layout_height="@dimen/xhdpi_layout"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_5dp"
            android:src="@color/placeholder_bg" />

        <RelativeLayout
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_10dp"
            android:layout_toEndOf="@id/worldwide_flag_skeleton"
            tools:ignore="RelativeOverlap">

                <View
                    android:id="@+id/skeleton_country"
                    android:layout_width="60dp"
                    android:layout_height="14dp"
                    android:background="@color/placeholder_bg" />

                <View
                    android:layout_marginTop="1dp"
                    android:layout_toEndOf="@id/skeleton_country"
                    android:layout_width="45dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/margin_15dp"
                    android:background="@color/placeholder_bg" />

                <View
                    android:layout_marginTop="4dp"
                    android:id="@+id/skeleton_body"
                    android:layout_below="@id/skeleton_country"
                    android:layout_width="250dp"
                    android:layout_height="7dp"
                    android:background="@color/placeholder_bg"
                    android:layout_marginBottom="2dp"/>

                <View
                    android:id="@+id/skeleton_body_2"
                    android:layout_below="@id/skeleton_body"
                    android:layout_width="250dp"
                    android:layout_height="7dp"
                    android:background="@color/placeholder_bg"
                    android:layout_marginBottom="2dp"/>

                <View
                    android:layout_below="@id/skeleton_body_2"
                    android:layout_width="180dp"
                    android:layout_height="7dp"
                    android:background="@color/placeholder_bg" />
        </RelativeLayout>

        <View
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:background="@color/placeholder_bg" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>