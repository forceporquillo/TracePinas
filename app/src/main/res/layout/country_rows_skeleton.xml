<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_2dp"
    android:layout_marginBottom="@dimen/margin_1dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="@dimen/padding_5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/worldwide_flag_skeleton"
            android:layout_width="@dimen/xhdpi_layout"
            android:layout_height="@dimen/xhdpi_layout"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/margin_5dp"
            android:layout_marginStart="@dimen/margin_15dp"
            android:src="@color/placeholder_bg" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_3dp"
            android:layout_marginStart="@dimen/margin_10dp"
            android:layout_toEndOf="@id/worldwide_flag_skeleton"
            tools:ignore="RelativeOverlap">

            <LinearLayout
                android:id="@+id/country_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:layout_width="60dp"
                    android:layout_height="15dp"
                    android:background="@color/placeholder_bg" />

                <View
                    android:layout_width="45dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/margin_15dp"
                    android:background="@color/placeholder_bg" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cases_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/country_container"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="250dp"
                    android:layout_height="10dp"
                    android:background="@color/placeholder_bg" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cases_container"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="180dp"
                    android:layout_height="10dp"
                    android:background="@color/placeholder_bg" />

            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:background="@color/placeholder_bg" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>