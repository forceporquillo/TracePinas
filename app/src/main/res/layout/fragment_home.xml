<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/foregroundColor2">

        <com.github.florent37.shapeofview.shapes.ArcView
            android:id="@+id/arc_view_container"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:shape_arc_cropDirection="outside"
            app:shape_arc_height="20dp"
            app:shape_arc_position="bottom">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_component" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="@dimen/_30dp"
                    android:src="@drawable/ic_person" />
            </RelativeLayout>
        </com.github.florent37.shapeofview.shapes.ArcView>

        <androidx.cardview.widget.CardView
            android:layout_below="@id/arc_view_container"
            android:layout_width="match_parent"
            android:layout_marginTop="-40dp"
            android:layout_marginStart="@dimen/margin_15dp"
            android:layout_marginEnd="@dimen/margin_15dp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/foregroundColor2"
            app:cardCornerRadius="@dimen/margin_15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deaths" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
</RelativeLayout>